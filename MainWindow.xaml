<Window
    x:Class="CryptoAccessible.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="http://schemas.microsoft.com/winui/2006/xaml/presentation"
    Title="CryptoAccessible"
    Height="600" Width="900">
    <muxc:NavigationView x:Name="RootNav" PaneDisplayMode="Left" IsBackButtonVisible="Collapsed">
        <muxc:NavigationView.MenuItems>
            <muxc:NavigationViewItem Content="Dashboard" Tag="dashboard" />
            <muxc:NavigationViewItem Content="Watchlist" Tag="watchlist" />
            <muxc:NavigationViewItem Content="Movers" Tag="movers" />
            <muxc:NavigationViewItem Content="News & Alerts" Tag="news" />
            <muxc:NavigationViewItem Content="Settings" Tag="settings" />
        </muxc:NavigationView.MenuItems>
        <Frame x:Name="ContentFrame" />
    </muxc:NavigationView>
</Window>
